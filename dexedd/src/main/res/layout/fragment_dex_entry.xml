<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/supplementary_dark">

    <FrameLayout
            android:id="@+id/dex_entry_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dex_entry_head_size"
            android:paddingRight="@dimen/dex_entry_head_padding"
            android:paddingEnd="@dimen/dex_entry_head_padding"
            android:paddingLeft="@dimen/dex_entry_head_padding"
            android:paddingStart="@dimen/dex_entry_head_padding"
            android:background="@drawable/type_background_unknown">

        <ImageView
                android:id="@+id/dex_entry_image"
                android:layout_width="@dimen/dex_entry_image_size"
                android:layout_height="@dimen/dex_entry_image_size"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="@dimen/dex_entry_image_bottom_margin"
                android:layout_gravity="center"
                android:background="@drawable/dex_entry_image_background"
                android:src="@drawable/pokeball_background_white"
                android:contentDescription="@string/description_pokemon_image" />

    </FrameLayout>

    <com.nav.dexedd.ui.NotifyingScrollView
            android:id="@+id/dex_entry_scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fillViewport="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:id="@+id/dex_entry_image_proxy_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dex_entry_image_proxy_height">

                <FrameLayout
                        android:id="@+id/dex_entry_image_proxy"
                        android:layout_width="@dimen/dex_entry_image_size"
                        android:layout_height="@dimen/dex_entry_image_size"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center">

                </FrameLayout>

            </FrameLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dex_entry_image_proxy_wrapper">

                <FrameLayout
                        android:id="@+id/dex_entry_basic_panel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/curved_edge_height"
                            android:layout_marginRight="@dimen/curved_edge_stretching_margin"
                            android:layout_marginEnd="@dimen/curved_edge_stretching_margin"
                            android:layout_marginLeft="@dimen/curved_edge_stretching_margin"
                            android:layout_marginStart="@dimen/curved_edge_stretching_margin"
                            android:background="@drawable/dex_entry_basic_panel_curved_edge" />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:paddingRight="@dimen/activity_margin_horizontal"
                            android:paddingEnd="@dimen/activity_margin_horizontal"
                            android:paddingBottom="5dp"
                            android:paddingLeft="@dimen/activity_margin_horizontal"
                            android:paddingStart="@dimen/activity_margin_horizontal"
                            android:background="@color/supplementary_dark">

                        <TextView
                                android:id="@+id/dex_entry_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/dex_entry_name_top_padding"
                                android:gravity="center"
                                android:textStyle="bold"
                                style="@style/ExtraLargeHeader">
                        </TextView>

                        <TextView
                                android:id="@+id/dex_entry_genus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dex_entry_name"
                                android:layout_marginTop="-4dp"
                                android:gravity="center"
                                android:textColor="@color/supplementary" />

                        <TextView
                                android:id="@+id/dex_entry_flavor_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dex_entry_genus"
                                android:paddingTop="15dp"
                                android:paddingRight="30dp"
                                android:paddingEnd="30dp"
                                android:paddingBottom="20dp"
                                android:paddingLeft="20dp"
                                android:paddingStart="20dp"
                                android:gravity="center"
                                style="@style/TextStandard" />

                    </RelativeLayout>

                </FrameLayout>

                <LinearLayout
                        android:id="@+id/dex_entry_body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/dex_entry_basic_panel"
                        android:padding="@dimen/activity_margin_uniform"
                        android:divider="@drawable/dex_entry_body_divider"
                        android:showDividers="middle"
                        android:orientation="vertical"
                        android:background="@color/supplementary_dark">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:id="@+id/dex_entry_type_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                            <com.nav.dexedd.ui.TypeTagView
                                    android:id="@+id/dex_entry_primary_type"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginEnd="5dp"
                                    style="@style/TypeTagView" />

                            <com.nav.dexedd.ui.TypeTagView
                                    android:id="@+id/dex_entry_secondary_type"
                                    style="@style/TypeTagView" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/dex_entry_abilities_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_abilities"
                                style="@style/TextLabel" />

                        <LinearLayout
                                android:id="@+id/dex_entry_abilities_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dex_entry_abilities_label"
                                android:orientation="vertical">

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/dex_entry_height_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_height"
                                style="@style/TextLabel" />

                        <LinearLayout
                                android:id="@+id/dex_entry_height_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dex_entry_height_label"
                                android:orientation="horizontal"
                                style="@style/PanelRow">

                            <TextView
                                    android:id="@+id/dex_entry_height_meters"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center" />

                            <TextView
                                    android:id="@+id/dex_entry_height_feet_inches"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/dex_entry_weight_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_weight"
                                style="@style/TextLabel" />

                        <LinearLayout
                                android:id="@+id/dex_entry_weight_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dex_entry_weight_label"
                                android:orientation="horizontal"
                                style="@style/PanelRow">

                            <TextView
                                    android:id="@+id/dex_entry_weight_kilograms"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center" />

                            <TextView
                                    android:id="@+id/dex_entry_weight_pounds"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/dex_entry_catch_rate_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_catch_rate"
                                style="@style/TextLabel" />

                        <LinearLayout
                                android:id="@+id/dex_entry_catch_rate_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dex_entry_catch_rate_label"
                                android:orientation="horizontal"
                                style="@style/PanelRow">

                            <TextView
                                    android:id="@+id/dex_entry_catch_rate_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/dex_entry_egg_groups_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_egg_groups"
                                style="@style/TextLabel" />

                        <LinearLayout
                                android:id="@+id/dex_entry_egg_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dex_entry_egg_groups_label"
                                android:orientation="horizontal"
                                style="@style/PanelRow">

                            <TextView
                                    android:id="@+id/dex_entry_egg_groups_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/dex_entry_gender_ratio_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_gender_ratio"
                                style="@style/TextLabel" />

                        <LinearLayout
                                android:id="@+id/dex_entry_gender_ratio_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dex_entry_gender_ratio_label"
                                android:orientation="vertical"
                                style="@style/PanelRow">

                            <ProgressBar
                                    android:id="@+id/dex_entry_gender_ratio"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/progress_bar_height"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:progressDrawable="@drawable/gender_ratio"
                                    style="@style/ProgressBarStandard" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textStyle="bold"
                                        android:textColor="@color/male"
                                        android:text="@string/mars"
                                        android:gravity="center" />

                                <TextView
                                        android:id="@+id/dex_entry_male_ratio"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center" />

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textStyle="bold"
                                        android:textColor="@color/female"
                                        android:text="@string/venus"
                                        android:gravity="center" />

                                <TextView
                                        android:id="@+id/dex_entry_female_ratio"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </com.nav.dexedd.ui.NotifyingScrollView>

</FrameLayout>
