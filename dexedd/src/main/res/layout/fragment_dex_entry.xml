<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_uniform_margin"
        android:background="@color/dex_supplementary_medium">

    <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

        <ImageView
                android:id="@+id/dex_entry_picture"
                android:contentDescription="@string/description_pokemon_picture"
                style="@style/DexEntryPicture" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dex_entry_picture"
                android:layout_toEndOf="@id/dex_entry_picture"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

            <TextView
                    android:id="@+id/dex_entry_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textAppearance="@style/ExtraLargeHeader">
            </TextView>

            <TextView
                    android:id="@+id/dex_entry_genus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dex_entry_name"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="italic"
                    android:textColor="@color/dex_supplementary" />

            <TextView
                    android:id="@+id/dex_entry_flavor_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dex_entry_genus"
                    android:textAppearance="@style/TextStandard" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/head">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

            <TableRow
                    android:minHeight="30dp"
                    android:layout_marginBottom="5dp">

                <TextView
                        android:id="@+id/type_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Type"
                        android:textAppearance="@style/LargeHeader">
                </TextView>


                <LinearLayout
                        android:id="@+id/type_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                    <com.nav.dexedd.component.ui.TypeTagView
                            android:id="@+id/primary_type"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            style="@style/TypeTagView"/>

                    <com.nav.dexedd.component.ui.TypeTagView
                            android:id="@+id/secondary_type"
                            style="@style/TypeTagView"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                    android:minHeight="30dp"
                    android:layout_marginBottom="5dp">

                <TextView
                        android:id="@+id/weight_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Weight"
                        android:textAppearance="@style/LargeHeader">
                </TextView>


                <LinearLayout
                        android:id="@+id/weight_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="103 lbs"
                            android:layout_gravity="center"
                            style="@style/TextStandard" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</RelativeLayout>
