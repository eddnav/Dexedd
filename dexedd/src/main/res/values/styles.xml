<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base -->
    <style name="Theme.DexTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_dull</item>
    </style>

    <!-- Component -->
    <style name="TextStandard">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextShadowed">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="LargeHeader">
        <item name="android:textSize">@dimen/large_header_text_size</item>
        <item name="android:textColor">@color/supplementary</item>
    </style>

    <style name="ExtraLargeHeader">
        <item name="android:textSize">@dimen/extra_large_header_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TypeTagView">
        <item name="android:layout_width">@dimen/type_tag_width</item>
        <item name="android:layout_height">@dimen/type_tag_height</item>
    </style>

    <style name="TypeTagViewMini">
        <item name="android:layout_width">@dimen/type_tag_mini_width</item>
        <item name="android:layout_height">@dimen/type_tag_mini_height</item>
        <item name="no_text">true</item>
    </style>

    <style name="DexEntryPicture">
        <item name="android:layout_width">@dimen/dex_entry_species_picture_size</item>
        <item name="android:layout_height">@dimen/dex_entry_species_picture_size</item>
        <item name="android:background">@drawable/dex_entry_species_picture_background</item>
    </style>

    <style name="DexGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:columnWidth">@dimen/dex_grid_cell_width</item>
        <item name="android:verticalSpacing">@dimen/dex_grid_cell_spacing</item>
        <item name="android:horizontalSpacing">@dimen/dex_grid_cell_spacing</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:gravity">fill</item>
    </style>

    <style name="DexGridCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DexGridCellImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dex_grid_cell_width</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/dex_grid_cell_image_background</item>
    </style>

    <style name="DexGridCellPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dex_grid_cell_panel_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/supplementary_dark</item>
    </style>

    <style name="DexGridCellPanelName">
        <item name="android:layout_width">@dimen/dex_grid_cell_panel_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dex_grid_cell_panel_element_padding</item>
        <item name="android:paddingRight">@dimen/dex_grid_cell_panel_element_half_padding</item>
        <item name="android:paddingLeft">@dimen/dex_grid_cell_panel_element_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/supplementary</item>
    </style>

    <style name="DexGridCellPanelNumber">
        <item name="android:layout_width">@dimen/dex_grid_cell_panel_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dex_grid_cell_panel_element_half_padding</item>
        <item name="android:paddingBottom">@dimen/dex_grid_cell_panel_element_padding</item>
        <item name="android:paddingLeft">@dimen/dex_grid_cell_panel_element_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/supplementary</item>
    </style>

    <style name="DexGridCellPanelCatchButton">
        <item name="android:background">@drawable/ic_uncatched</item>
        <item name="android:layout_width">@dimen/dex_grid_cell_panel_catch_button_size</item>
        <item name="android:layout_height">@dimen/dex_grid_cell_panel_catch_button_size</item>
        <item name="android:layout_marginRight">@dimen/dex_grid_cell_panel_element_padding</item>
        <item name="android:layout_marginLeft">@dimen/dex_grid_cell_panel_element_half_padding</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
