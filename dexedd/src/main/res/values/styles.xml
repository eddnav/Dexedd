    <!-- Component -->
    <style name="TextStandard">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextShadowed">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextLabel">
        <item name="android:paddingBottom">@dimen/text_label_padding_bottom</item>
    </style>

    <style name="LargeHeader">
        <item name="android:textSize">@dimen/header_text_size_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExtraLargeHeader">
        <item name="android:textSize">@dimen/header_text_size_extra_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InfoDialog">
        <item name="android:padding">@dimen/info_dialog_padding</item>
        <item name="android:background">@drawable/info_dialog_background</item>
    </style>

    <style name="TypeTagView">
        <item name="android:layout_width">@dimen/type_tag_width</item>
        <item name="android:layout_height">@dimen/type_tag_height</item>
    </style>

    <style name="TypeTagViewMini">
        <item name="android:layout_width">@dimen/type_tag_mini_width</item>
        <item name="android:layout_height">@dimen/type_tag_mini_height</item>
        <item name="no_text">true</item>
    </style>

    <style name="DexEntryImage">
        <item name="android:layout_width">@dimen/dex_entry_image_size</item>
        <item name="android:layout_height">@dimen/dex_entry_image_size</item>
        <item name="android:background">@drawable/dex_entry_image_background</item>
        <item name="android:src">@drawable/pokeball</item>
    </style>

    <style name="DexGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:columnWidth">@dimen/dex_cell_width</item>
        <item name="android:verticalSpacing">@dimen/dex_cell_spacing</item>
        <item name="android:horizontalSpacing">@dimen/dex_cell_spacing</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:gravity">fill</item>
    </style>

    <style name="DexCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dex_cell_background</item>
    </style>

    <style name="DexCellImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dex_cell_width</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DexCellPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dex_cell_panel_height</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="DexCellPanelName">
        <item name="android:layout_width">@dimen/dex_cell_panel_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dex_cell_panel_element_padding</item>
        <item name="android:paddingRight">@dimen/dex_cell_panel_element_half_padding</item>
        <item name="android:paddingLeft">@dimen/dex_cell_panel_element_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DexCellPanelNumber">
        <item name="android:layout_width">@dimen/dex_cell_panel_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dex_cell_panel_element_half_padding</item>
        <item name="android:paddingBottom">@dimen/dex_cell_panel_element_padding</item>
        <item name="android:paddingLeft">@dimen/dex_cell_panel_element_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DexCellPanelCatchButton">
        <item name="android:background">@drawable/ic_uncatched</item>
        <item name="android:layout_width">@dimen/dex_cell_panel_catch_button_size</item>
        <item name="android:layout_height">@dimen/dex_cell_panel_catch_button_size</item>
        <item name="android:layout_marginRight">@dimen/dex_cell_panel_element_padding</item>
        <item name="android:layout_marginLeft">@dimen/dex_cell_panel_element_half_padding</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
