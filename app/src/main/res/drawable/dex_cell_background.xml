<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                    android:startColor="@color/supplementary_mid_dark"
                    android:centerColor="@color/supplementary_dark"
                    android:endColor="@color/supplementary_dark"
                    android:angle="@integer/type_background_angle" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                    android:startColor="@color/supplementary_mid"
                    android:centerColor="@color/supplementary_mid_dark"
                    android:endColor="@color/supplementary_dark"
                    android:angle="@integer/type_background_angle" />
        </shape>
    </item>
</selector>