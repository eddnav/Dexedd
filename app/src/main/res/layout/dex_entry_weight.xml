<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/dex_entry_weight_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_weight"
            style="@style/TextLabel" />

    <LinearLayout
            android:id="@+id/dex_entry_weight_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dex_entry_weight_label"
            android:orientation="horizontal"
            style="@style/PanelRow">

        <TextView
                android:id="@+id/dex_entry_weight_kilograms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" />

        <TextView
                android:id="@+id/dex_entry_weight_pounds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" />

    </LinearLayout>

</RelativeLayout>