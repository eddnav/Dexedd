<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/InfoDialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/info_dialog_padding_vertical">

    <TextView
        android:id="@+id/ability_name"
        style="@style/TextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/info_dialog_padding_horizontal"
        android:paddingRight="@dimen/info_dialog_padding_horizontal"
        android:textAppearance="@style/LargeHeader"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/info_dialog_padding_vertical"
        android:paddingLeft="@dimen/info_dialog_padding_horizontal"
        android:paddingRight="@dimen/info_dialog_padding_horizontal">

        <TextView
            android:id="@+id/ability_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>